                            "duration": "",
                            "phase": "Chemo"
                        },
                        {
                            "day": "Days 2–6",
                            "name": "Cytarabine",
                            "dose": "2 g/m²/day over 4 hours",
                            "route": "IV infusion",
                            "duration": "4 hours after Fluderabine",
                            "phase": "Chemo"
