    "AML": {
        "Induction Therapy": {
            "goal": "To achieve complete remission by eradicating visible leukemic blasts and restoring normal hematopoiesis.",
            "protocols": [
                {
                    "protocolName": "7+3 (Cytarabine + Daunorubicin/Idarubicin)",
                    "drugs": [
                        {
                            "phase": "Pre-Chemo",
                            "day": "Day 1 -7",
                            "name": "Ondansetron",
                            "dose": "8 mg",
                            "route": "IV",
                            "duration": "15 min"
                        },
                        {
                            "phase": "Pre-Chemo",
                            "day": "Day 1 - 10",
                            "name": "Prednisolone eye drops",
                            "dose": "1 drop each eye",
                            "route": "Eye drops",
                            "duration": "2 hours before Cytarabine"
                        },
                        {
                            "phase": "Chemo",
                            "day": "Days 1–3",
                            "name": "Daunorubicin or Idarubicin",
                            "dose": "60 mg/m²/day over 5-15 min or 12 mg/m²/day over 10-15 min",
                            "route": "IV",
                            "duration": "3 days"
                        },
                        {
                            "phase": "Chemo",
                            "day": "Days 1–7",
                            "name": "Cytarabine (Ara-C)",
                            "dose": "100 mg/m²/day",
                            "route": "IV continuous infusion",
                            "duration": "24 hours"
                        }
                    ],
                    "NursesInfo": [
                        "Administer anthracycline (Daunorubicin / Idarubicin) only after completion of the previous day's Cytarabine infusion.",
                        "Hydrate well during chemotherapy administration",
                        "Use central venous line (PICC/CVC) for Idarubicin / Daunorubicin -  avoid peripheral veins."
                    ],
                    "source": "Hospital Protocol"
                },
                {
